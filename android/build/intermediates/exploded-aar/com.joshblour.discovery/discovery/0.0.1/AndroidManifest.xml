<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yonahforst.discovery"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >

        <!--
        Service to handle BLE Advertising - Using a service allows advertising to continue
        when the app is no longer on screen in a reliable manner.
        -->
        <service
            android:name="com.yonahforst.discovery.AdvertiserService"
            android:enabled="true"
            android:exported="false" >
        </service>
    </application>

</manifest>